# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Supabase Service Role Key (for admin operations)
# Only needed if you're running admin operations
# VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# External API Configuration
# Prayer Times API (Aladhan) - No key required for basic usage
# VITE_ALADHAN_API_URL=https://api.aladhan.com/v1

# Quran API Configuration - No key required for basic usage
# VITE_QURAN_API_URL=https://api.quran.com/api/v4

# Optional: Custom API Keys for enhanced features
# VITE_CUSTOM_PRAYER_API_KEY=your_custom_api_key
# VITE_CUSTOM_QURAN_API_KEY=your_custom_quran_api_key

# Application Configuration
# Set to 'development' for local development, 'production' for production
VITE_APP_ENV=development

# Optional: Analytics and Monitoring
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Development Configuration
# Enable debug mode for development
VITE_DEBUG=false

# API Rate Limiting
VITE_API_RATE_LIMIT=100

# Feature Flags
# Enable/disable specific features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false